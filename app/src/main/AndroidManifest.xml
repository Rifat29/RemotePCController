<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.rifat.remotepc">

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/app_icon"
        android:label="Remote PC Controller"
        android:roundIcon="@drawable/app_icon"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.DayNight.DarkActionBar">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activity.BluetoothActivity"
            android:label="Bluetooth" />
        <activity
            android:name=".Activity.WifiActivity"
            android:label="Wifi" />
        <activity
            android:name=".Activity.DeviceSelectionActivity"
            android:label="Devices" />
        <activity
            android:name=".Activity.MouseActivity"
            android:label="Mouse" />
        <activity
            android:name=".Activity.KeyboardActivity"
            android:label="Keyboard" />
        <activity android:name=".Activity.InternetActivity"></activity>
    </application>

</manifest>